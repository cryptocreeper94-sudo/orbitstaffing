{
  "expo": {
    "name": "ORBIT Staffing",
    "slug": "orbit-staffing",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/orbit-logo.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/orbit-saturn-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#020617"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.orbitstaffing.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "ORBIT uses your location for GPS-verified clock-in at job sites.",
        "NSLocationAlwaysUsageDescription": "ORBIT uses your location for GPS-verified clock-in at job sites.",
        "NSFaceIDUsageDescription": "Use Face ID to securely log into ORBIT.",
        "NSCameraUsageDescription": "ORBIT uses the camera to scan QR codes and take photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#020617"
      },
      "package": "com.orbitstaffing.app",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "ORBIT uses your location for GPS-verified clock-in at job sites."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Use Face ID to securely log into ORBIT."
        }
      ],
      "expo-secure-store"
    ],
    "extra": {
      "apiUrl": "https://orbitstaffing.io/api",
      "eas": {
        "projectId": "orbit-staffing"
      }
    },
    "owner": "darkwavestudios"
  }
}
