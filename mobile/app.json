{
  "expo": {
    "name": "ORBIT Staffing",
    "slug": "orbit-staffing",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/orbit-logo.png",
    "splash": {
      "image": "./assets/orbit-saturn-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.orbitstaffing.app",
      "buildNumber": "1",
      "usesAppleSignIn": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "ORBIT uses your location for GPS-verified check-in at job sites.",
        "NSFaceIDUsageDescription": "Use Face ID to securely log into ORBIT."
      }
    },
    "android": {
      "package": "com.orbitstaffing.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA"
      ],
      "usesPermission": [
        {
          "name": "android.permission.ACCESS_FINE_LOCATION",
          "maxSdkVersion": 32
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-location",
      "expo-biometric",
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "orbit-staffing"
      }
    }
  }
}
