# ORBIT Franchisee Deployment Template
# Copy this to .env.local and fill in your values

# ========================
# FRANCHISEE CONFIGURATION
# ========================
VITE_FRANCHISE_NAME="Superior Staffing"
VITE_FRANCHISE_ID="your-franchise-id-here"
VITE_BRAND_COLOR="#06B6D4"
VITE_CUSTOM_DOMAIN="yourbusiness.orbitstaffing.net"

# ========================
# DATABASE (Replit Provides)
# ========================
DATABASE_URL="postgresql://user:password@host/database"
PGHOST="your-postgres-host"
PGPORT="5432"
PGUSER="postgres"
PGPASSWORD="your-db-password"
PGDATABASE="your_db_name"

# ========================
# ADMIN ACCESS
# ========================
VITE_ADMIN_PIN="4444"

# ========================
# COMPLIANCE
# ========================
COMPLIANCE_STATE="TN"  # Primary state (TN, KY, etc)
PREVAILING_WAGE_ENABLED="false"
I9_TRACKING_ENABLED="true"

# ========================
# BILLING
# ========================
BILLING_MODEL="fixed"  # "fixed" or "revenue_share"
MONTHLY_FEE="499.00"
REVENUE_SHARE_PERCENTAGE="2.00"

# ========================
# FEATURES (Toggle)
# ========================
FEATURE_GPS_VERIFICATION="true"
FEATURE_INSTANT_PAY="true"
FEATURE_BONUS_SYSTEM="true"
FEATURE_MULTI_STATE="false"
FEATURE_INVOICE_GENERATION="true"

# ========================
# SUPPORT & UPDATES
# ========================
SUPPORT_EMAIL="support@orbitstaffing.net"
UPDATES_ENABLED="true"
AUTO_UPDATE_CHECK="true"
